@using Abonos.Models;
@model List<Principal>
@{
    Layout = "_Layout";
}

<div class="app-main__inner">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-diamond icon-gradient bg-mean-fruit"></i>
                </div>
                <div>
                    Listado de compras
                    <div class="page-title-subheading">
                        En este modulo se visualizan todas las compras pendientes de pagar.
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tabs-animation">
        <div class="card mb-3">
            <div class="card-body">
                <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12">
                            <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
                                <thead>
                                    <tr>
                                        <th>Compra</th>
                                        <th>Precio</th>
                                        <th>Saldo</th>
                                        <th>Descripcion</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var m in Model)
                                    {
                                        <tr>
                                            <td>@m.IdCompra</td>
                                            <td>@m.Precio</td>
                                            <td>@m.Saldo</td>
                                            <td>@m.Descripcion</td>
                                            <td><span class="badge badge-danger">@m.Estado</span></td>
                                            <td>
                                                <a href="/Abono/Registrar/@m.IdCompra" class="badge badge-info">
                                                    <span class="fa fa-pencil-alt mr-1"></span>
                                                    Abonar
                                                </a>
                                                <a href="/Abono/Historial/@m.IdCompra" class="badge badge-info">
                                                    <span class="fa fa-file-code mr-1"></span>
                                                    Historial
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>